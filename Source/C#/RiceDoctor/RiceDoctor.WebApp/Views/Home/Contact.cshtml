@{
    var message = ViewData["Message"];

    ViewData["Title"] = "Liên hệ";
    ViewData["ContactPage"] = true;
}
@model RiceDoctor.WebApp.Models.Feedback

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="well">
    Bạn có vấn đề thắc mắc cần trao đổi với chuyên gia?
    Hãy điền vào các thông tin sau và chúng tôi sẽ liên hệ lại với bạn sớm nhất có thể.
</div>

@if (message != null)
{
    <div class="alert alert-success alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        @Html.Raw(message)
    </div>
}

<form asp-controller="Home" asp-action="Feedback" class="form-horizontal" method="post">
    <div class="form-group">
        <label asp-for="Email" class="col-sm-2 control-label">E-mail</label>
        <div class="col-sm-4">
            <input asp-for="Email" class="form-control" placeholder="Địa chỉ e-mail" autofocus required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label">Tên</label>
        <div class="col-sm-4">
            <input asp-for="Name" class="form-control" placeholder="Tên" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Subject" class="col-sm-2 control-label">Tiêu đề</label>
        <div class="col-sm-4">
            <input asp-for="Subject" class="form-control" placeholder="Tiêu đề" required>
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Message" class="col-sm-2 control-label">Nội dung</label>
        <div class="col-sm-6">
            <textarea asp-for="Message" class="form-control" placeholder="Nội dung cần trao đổi" rows="5" required></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
            <button type="submit" class="btn btn-primary">Phản hồi</button>
        </div>
    </div>
</form>