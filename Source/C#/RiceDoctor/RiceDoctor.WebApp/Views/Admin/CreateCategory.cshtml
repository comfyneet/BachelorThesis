@using RiceDoctor.DatabaseManager
@model RiceDoctor.DatabaseManager.Category
@{
    var website = (Website) ViewData["Website"];

    ViewData["Title"] = $"Thêm trang thể loại cho {website.Name}";
    ViewData["AdminPage"] = true;
}

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
</div>

<br/>

<form asp-action="PostCreateCategory" method="post">
    <div class="form-horizontal">
        <input type="hidden" name="WebsiteId" value="@website.Id"/>
        <div class="form-group">
            <label asp-for="Url" class="col-md-3 control-label">Url</label>
            <div class="col-md-9">
                <input asp-for="Url" class="form-control" placeholder="Ví dụ: http://nnptnt.vinhphuc.gov.vn/csdlnongnghiep/pages/lua.aspx?date=&date1=&chkNgayDang=False&chkNgayHa=False&EventID=0&Page=1" required/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ArticleXPath" class="col-md-3 control-label">XPath tài liệu</label>
            <div class="col-md-9">
                <input asp-for="ArticleXPath" class="form-control" placeholder="@(@"//a[@class='more' and starts-with(@href, 'lua.aspx')]/@href")" required/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TitleXPath" class="col-md-3 control-label">XPath tiêu đề</label>
            <div class="col-md-9">
                <input asp-for="TitleXPath" class="form-control" placeholder="@(@"//h1[@class='title']")" required/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ContentXPath" class="col-md-3 control-label">XPath nội dung</label>
            <div class="col-md-9">
                <input asp-for="ContentXPath" class="form-control" placeholder="@(@"//div[contains(@class, 'fck_detail')]")" required/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Thêm" class="btn btn-primary"/>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Website" asp-route-id="@website.Id"><< Trở về</a>
</div>