@using RiceDoctor.RuleManager
@model RiceDoctor.WebApp.Models.Advisory
@{
    var problems = (IReadOnlyList<Problem>) ViewData["Problems"];
    ViewData["Title"] = "Tư vấn/Chuẩn đoán";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-8">
        <h2>Tư vấn/Chuẩn đoán</h2>

        <h4>Bài toán</h4>
        <form asp-controller="Advisory" asp-action="SelectProblem" method="post">
            <input type="hidden" name="guid" value="@Model.Guid"/>
            @if (problems != null)
            {
                for (var i = 0; i < problems.Count; ++i)
                {
                    <div class="radio">
                        <label>
                            <input type="radio" name="problemId" value="@i">@problems[i].Type
                        </label>
                    </div>
                }
            }
            <div class="radio">
                <label>
                    <input type="radio" name="problemId" value="-1">Tổng quát
                </label>
            </div>
            Nếu chọn tổng quát, nêu ra loại sự kiện mục tiêu <input type="text" name="outputs" placeholder="Benh,SauBenh"/>
            <br/>
            Sự kiện đầu vào <input type="text" name="inputs" placeholder="Benh=BenhVangLa,MauLa=LaVang"/>
            <br/>
            Số sự kiện mục tiêu cần tìm <input type="number" name="totalGoals" placeholder="-1 để tìm tất cả"/>
            <br/>
            <input type="submit" class="btn btn-default" value="Chọn"/>
        </form>
    </div>
</div>